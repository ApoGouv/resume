{
  "name": "resume",
  "description": "A personal resume app built with React, TypeScript, and Vite.",
  "private": true,
  "license": "MIT",
  "version": "3.0.1",
  "author": "Apostolos Gouvalas",
  "homepage": "https://apogouv.github.io/resume/#",
  "repository": {
    "type": "git",
    "url": "https://github.com/ApoGouv/resume.git"
  },
  "keywords": [
    "resume",
    "react",
    "typescript",
    "vite"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "gen-pdfs": "node ./src/Utils/generatePDF.js",
    "dev:gen-pdfs": "node ./src/Utils/generatePDF.js --runDevServer --port 3333",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "predeploy": "npm run dev:gen-pdfs && npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@fontsource/lato": "^5.1.0",
    "@playwright/browser-chromium": "^1.47.2",
    "country-flag-icons": "^1.5.13",
    "playwright": "^1.47.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.23.1",
    "web-vitals": "^4.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/node": "^20.16.10",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@types/react-helmet": "^6.1.11",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "gh-pages": "^6.1.1",
    "globals": "^15.9.0",
    "postcss": "^8.4.47",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-preset-env": "^9.6.0",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.3.3",
    "sharp": "^0.33.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.8",
    "vite-plugin-svgr": "^4.2.0"
  }
}
