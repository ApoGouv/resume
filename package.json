{
  "name": "resume",
  "description": "A personal resume app built with React, TypeScript, and Vite.",
  "private": true,
  "license": "MIT",
  "version": "1.7.0",
  "author": "Apostolos Gouvalas",
  "homepage": "https://apogouv.github.io/resume/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ApoGouv/resume.git"
  },
  "keywords": [
    "resume",
    "react",
    "typescript",
    "vite"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "gen-pdfs": "node ./src/Utils/generatePDF.js",
    "dev:gen-pdfs": "node ./src/Utils/generatePDF.js --runDevServer --port 3333",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "predeploy": "npm run dev:gen-pdfs && npm run build",
    "deploy": "gh-pages -d dist",
    "test": "vitest"
  },
  "dependencies": {
    "@fontsource/lato": "^5.0.21",
    "@playwright/browser-chromium": "^1.41.2",
    "country-flag-icons": "^1.5.9",
    "playwright": "^1.41.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-icons": "^5.0.1",
    "web-vitals": "^3.5.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-helmet": "^6.1.11",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "gh-pages": "^6.1.1",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-preset-env": "^9.5.8",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.1.1"
  }
}
